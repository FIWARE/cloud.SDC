<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:tx="http://www.springframework.org/schema/tx"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
        default-autowire="no">

    <bean id="productDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.ProductDaoJpaImpl"/>
    <bean id="productInstanceDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.ProductInstanceDaoJpaImpl"/>
    <bean id="applicationDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.ApplicationDaoJpaImpl"/>
    <bean id="applicationInstanceDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.ApplicationInstanceDaoJpaImpl"/>
    <bean id="customerDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.CustomerDaoJpaImpl"/>
    <bean id="osDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.OSDaoJpaImpl"/>
    <bean id="osInstanceDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.OSInstanceDaoJpaImpl"/>
    <bean id="imageDao" lazy-init="true"
          class="com.telefonica.euro_iaas.sdc.dao.impl.ImageDaoJpaImpl"/>


</beans>
