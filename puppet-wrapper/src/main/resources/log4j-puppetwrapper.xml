<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="puppetwrapper" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${catalina.base}/logs/puppetwrapper.log" />
        <param name="MaxBackupIndex" value="10" />
        <param name="MaxFileSize" value="1000000" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p %C{1} | %m%n" />
        </layout>
    </appender>
    
    
    <!-- puppetWrapper logger -->
    <logger name="com.telefonica.euro_iaas.sdc.puppetwrapper" additivity="false">
        <level value="com.telefonica.euro_iaas.sdc.puppetwrapper" />
        <appender-ref ref="puppetwrapper" />
    </logger>
    
    <!-- SpringFramework logger -->
     <logger name="org.springframework" additivity="false">
        <level value="error" />
        <appender-ref ref="puppetwrapper" />
    </logger>

	<!-- Default logger -->
	<root>
		<level value="debug" />
		<appender-ref ref="puppetwrapper" />
	</root>
</log4j:configuration>